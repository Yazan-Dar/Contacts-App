<%- include('../partials/header') -%>
<section>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card text-black mt-5 mb-5 shadow" style="border-radius: 25px;">
                    <div class="card-body">
                        <div class="row justify-content-center">
                            <h2 class="card-title text-center mb-5 mx-1 mx-md-4 mt-4">
                                Edit &laquo; <%= contact.name + ' ' + contact.lastname %> &raquo; data:
                            </h2>
                            <form action="<%= contact.id %>?_method=PUT" method="POST" enctype="multipart/form-data"
                                  class="row justify-content-center mx-1 mx-md-4">
                                <input type="hidden" name="_method" value="PUT">
                                <div class="col-md-10 col-lg-7 col-xl-7 order-2 order-lg-1">
                                    <div class="ms-md-3 me-md-3 ms-1 me-1 text-center">
                                        <%- include('../partials/messages') -%>
                                    </div>
                                    <div class="row">
                                        <div class="form-group d-flex flex-row align-items-center mb-4 col-lg-6">
                                            <i class="fas fa-user-edit fa-lg fa-fw mt-4 ms-1 me-1"></i>
                                            <div class="form-outline flex-fill mb-0 ms-lg-1">
                                                <label class="form-label" for="firstNameID">First Name</label>
                                                <input type="text" name="name" id="firstNameID"
                                                       class="form-control shadow-none" value="<%= contact.name %>" style="border-color: #ced4da;"/>
                                            </div>
                                        </div>
                                        <div class="form-group d-flex flex-row align-items-center mb-4 col-lg-6">
                                            <i class="fas fa-user-edit fa-lg fa-fw mt-4 ms-1 me-1"></i>
                                            <div class="form-outline flex-fill mb-0 ms-lg-1">
                                                <label class="form-label" for="lastNameID">Last Name</label>
                                                <input type="text" name="lastname" id="lastNameID"
                                                       class="form-control shadow-none" value="<%= contact.lastname %>" style="border-color: #ced4da;"/>
                                            </div>
                                        </div>
                                        <div class="form-group d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-phone-square-alt fa-lg fa-fw mt-4 me-2"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="textID">Phone Number</label>
                                                <input type="text" name="phone" id="textID" class="form-control shadow-none"
                                                       value="<%= contact.phone %>" style="border-color: #ced4da;" oninput="this.value=this.value.replace(/[^\d]/,'')"/>
                                            </div>
                                        </div>
                                        <div class="form-group d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg fa-fw mt-4 me-2"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label class="form-label" for="emailAddressID">Email address</label>
                                                <input type="email" name="email" id="emailAddressID"
                                                       class="form-control shadow-none" value="<%= contact.email %>" style="border-color: #ced4da;"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <a href="/contacts">
                                            <button type="button" class="btn btn-secondary btn-lg me-md-3 me-2">
                                                <i class="fas fa-arrow-circle-left"></i>&ensp;Back
                                            </button>
                                        </a>
                                        <button type="submit" class="btn btn-success btn-lg"><i
                                                    class="fas fa-save"></i>&ensp;Save Edits
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-2 col-lg-6 col-xl-3 mb-lg-5 me-xl-5 me-lg-3"
                                     style="width: 12rem;">
                                    <input name="contact-img" type="file" id="file" accept=".jpg, .jpeg, .png"
                                           onchange="uploadImage(event)" style="display: none;">
                                    <label for="file">
                                        <% if (!contact.img) { %>
                                            <img id="img" for="file" src="/images/profile-placeholder.png"
                                                 class="img-fluid img-thumbnail rounded-circle"
                                                 style="width: 175px; height: 175px;">
                                        <% } else { %>
                                            <img id="img" for="file" src="../<%= contact.img %>"
                                                 class="img-fluid img-thumbnail rounded-circle"
                                                 style="width: 175px; height: 175px;">
                                        <% } %>
                                    </label>
                                    <h6 class="text-center mt-3">
                                        <span id="firstname-img"><%= contact.name %></span>
                                        <span id="lastname-img"><%= contact.lastname %></span>
                                    </h6>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    let firstname = document.getElementById('firstNameID');
    let lastname = document.getElementById('lastNameID');
    let firstnameimg = document.getElementById('firstname-img');
    let lastnameimg = document.getElementById('lastname-img');

    firstname.addEventListener('input', () => {
        firstnameimg.innerText = firstname.value + ' ';
    })

    lastname.addEventListener('input', () => {
        lastnameimg.innerText = lastname.value;
    })
</script>
<%- include('../partials/footer') -%>